<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("views.header.name_title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("views.header.home"), root_path %></li>
        <li><%= link_to t("views.header.help"), help_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "views.header.books.book" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t("views.header.books.list_books"), books_path %>
              </li>
              <li>
                <%= link_to t("views.header.books.request"),
                  book_requests_path %>
              </li>
            </ul>
          </li>
          <li><%= render "layouts/user" %></li>
          <% if can? :manage, :all %>
            <li><%= render "layouts/manager" %></li>
          <% end %>
        <% end %>
        <% if current_user.present? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("views.users.profile"), current_user %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("views.button.logout"),
                  destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t("views.button.login"), new_user_session_path  %>
          </li>
          <li>
            <%= link_to t("views.header.sign_in_facebook"),
              user_facebook_omniauth_authorize_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
