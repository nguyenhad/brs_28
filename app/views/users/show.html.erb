<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.avatar.present? %>
        <%= image_tag(user.avatar, size: Settings.users.ava_size) %>
      <% else %>
        <%= image_tag(Settings.users.default_avatar,
          size: Settings.users.ava_size) %>
      <% end %>
      <h3><%= @user.name %></h3>
      <h3><%= @user.email %></h3>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <% unless current_user == @user %>
      <%= render "follow_form" %>
    <% end %>
  </aside>
  <div class="col-md-8">
    <%= render "favorite_book" %>
    <%= render "reading_history" %>
    <div class="col-md-8">
      <%= render "activities" %>
    </div>
  </div>
</div>
