<% provide :title, t("views.users.all_users") %>
<h1><%= t "views.users.all_users" %></h1>
<ul class="users">
  <%= search_form_for @search do |f| %>
    <table class="table">
      <tr>
        <td><%= f.text_field :name_cont, class: "form-control",
          placeholder: t("views.users.index.placeholder_name") %></td>
        <td>
          <%= f.submit t("views.admin.user.search"), class: "btn btn-primary" %>
        </td>
      </tr>
    </table>
  <% end %>
  <table class="table table-hover">
    <thead>
      <tr class="info">
        <th><%= t "users.name" %></th>
        <th><%= t "users.email" %></th>
        <th><%= t "users.avatar" %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user.name, user_path(user) %>
          </td>
          <td>
            <%= link_to user.email, user %>
          </td>
          <td>
            <% if user.avatar.present? %>
              <%= link_to image_tag(user.avatar, size: Settings.users.ava_size), user %>
            <% else %>
              <%= link_to image_tag(Settings.users.default_avatar,
                size: Settings.users.ava_size) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</ul>
<%= paginate @users %>
