<% provide :title, t("views.books.all_books") %>
<h1><%= t "views.books.all_books" %></h1>
<div class="col-md-12">
  <div>
    <%= search_form_for @search, class: "form-inline" do |f| %>
      <%= f.text_field :title_cont, class: "form-control",
        placeholder: t("views.admin.books.index.placeholder.title") %>
      <%= f.text_field :author_cont, class: "form-control",
        placeholder: t("views.admin.books.index.placeholder.author") %>
      <%= f.submit t("views.admin.user.search"), class: "btn btn-primary" %>
    <% end %>
  </div><br>
  <table class = "table" style="margin-top: 15px">
    <div class="section group">
      <%= render @books %>
    </div>
  </table>
</div>
<%= paginate @books %>
<%= page_entries_info @books %>
